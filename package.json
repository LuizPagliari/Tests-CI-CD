{
  "name": "tests-ci-cd",
  "version": "1.0.0",
  "description": "Exemplo de projeto Node.js com CI/CD",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "lint": "eslint .",
    "prepare": "husky install"
  },
  "keywords": ["nodejs", "github-actions", "ci-cd"],
